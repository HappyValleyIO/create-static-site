title: Proof of concept
subtitle: Default subtitle
---

<!doctype html>
<html lang="">
<head>
    <meta charset="utf-8">
    <title>{{ title }}</title>
    <meta name="description"
          content="An example site where we use eleventy to build the static assets before parcel handles the bundling.">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">

    {#    <link rel="manifest" href="site.webmanifest">#}
    {#    <link rel="apple-touch-icon" href="icon.png">#}
    <!-- Place favicon.ico in the root directory -->

    <meta name="theme-color" content="#fafafa">

    <script src="~scripts/app.ts" defer></script>

    <link rel="stylesheet" href="~styles/all.scss">
</head>

<body>
<div class="content">
    <div class="container">
        <h1 class="title" data-controller="log">{{ title }}</h1>
        <h3 class="subtitle" data-controller="alert">{{ subtitle }}</h3>

        {{ content | safe }}

        <form name="contact-example" netlify>
            <h5 class="title is-size-5">Like our content? Join our newsletter to read more.</h5>
            <div class="field">
                <label class="label" for="name-input">Name</label>
                <div class="control">
                    <input id="name-input" type="text" name="name" class="input" required>
                </div>
            </div>

            <div class="field">
                <label class="label" for="email-input">Email Address</label>
                <div class="control">
                    <input id="email-input" type="email" name="email" class="input" required>
                </div>
            </div>

            <div class="field">
                <button class="button is-primary">Join</button>
            </div>
        </form>
    </div>
</div>

</body>

</html>