{
  "name": "@happyvalleyio/create-static",
  "version": "0.1.0",
  "description": "A static site starter template.",
  "scripts": {
    "dev": "npm-run-all --parallel bundle:*",
    "bundle:eleventy": "eleventy --serve --quiet",
    "bundle:parcel": "parcel watch --no-hmr _site/*.html _site/**/*.html",
    "bundle:serve": "live-server ./dist --entry-file=index.html --port=3000",
    "build": "eleventy && parcel build _site/*.html _site/**/*.html",
    "lint": "eslint 'src/**/*.{ts}' --fix",
    "stylelint": "stylelint src/**/*.scss"
  },
  "repository": "https://github.com/HappyValleyIO/create-static-site",
  "author": "Happy Valley IO <support@happyvalley.io>",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@babel/core": "^7.10.4",
    "@types/turbolinks": "^5.2.0",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "prettier": "2.0.5",
    "sass": "^1.26.10",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "bulma": "^0.9.0",
    "stimulus": "^1.1.1",
    "turbolinks": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.scss": [
      "stylelint --fix",
      "prettier --write"
    ]
  }
}
